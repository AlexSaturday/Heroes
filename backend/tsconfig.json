{
    "compilerOptions": {
      "rootDir": "./src",
      "outDir": "./dist",
      "module": "CommonJS",
      "target": "ES2022",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "moduleResolution": "Node",
      "forceConsistentCasingInFileNames": true
    },
    "include": ["src"],
    "exclude": ["node_modules", "dist"]
  }